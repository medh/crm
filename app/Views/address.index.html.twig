{% extends 'default.html.twig' %}
{% block body %}
    <div>
        <h4 class="text-center">
            Liste des adresses [ {{ contact.lastname }} {{ contact.firstname }} : {{ contact.email }}]
            </h4>
    </div>
    <div class="row row col-md-12 pull-right ">
        <a href="{{ baseUrl ~ '?p=address/add/' ~ contact.id }}" class="btn btn-primary btn-xs pull-right">
            <b>+</b> Ajouter une adresse
        </a>
    </div>
    <div class="row col-md-12 ">
        <table class="table table-striped custab">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>ville</th>
                <th>pays</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            {% for addresse in addresses %}
                <tr>
                    <td>{{ addresse.id|e }}</td>
                    <td>{{ addresse.number|e }}</td>
                    <td>{{ addresse.street|e }}</td>
                    <td>{{ addresse.postalCode|e }}</td>
                    <td>{{ addresse.city|e }}</td>
                    <td>{{ addresse.country|e }}</td>
                    <td class="text-center flex ">
                        <a class='btn btn-info btn-xs' href="{{ baseUrl ~ '?p=address/edit/' ~ addresse.id }}">
                            <span class="glyphicon glyphicon-edit"></span> Edition
                        </a>
                        <form action="{{ baseUrl ~ '?p=address/delete/' ~ addresse.id }}" method="post">
                            <input type="hidden" value="{{ addresse.id  }}" name="id">
                            <button class="btn btn-danger btn-xs" >
                                <span class="glyphicon glyphicon-remove"></span> Suppression
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}